@model demo_Identity_4.Models.Employee

@{
    ViewData["Title"] = "Edit Employees";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Employee</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Full Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Phone" class="form-label">Phone</label>
            <input asp-for="Phone" class="form-control" placeholder="Enter Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a href="@Url.Action("Index", "Employees")" class="btn btn-secondary mt-3 ml-2">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
