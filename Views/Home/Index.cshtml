@{
    ViewData["Title"] = "Employment Management System";
}

<!-- Hero Section -->
<section class="hero text-Black text-center py-5" style="background: linear-gradient(to right, #007bff, #5f6368); animation: fadeIn 2s;">
    <div class="container">
        <h1 class="display-4 mb-4" style="font-size: 3rem; font-weight: bold;">Welcome to the Employment Management System</h1>
        <p class="lead mb-5" style="font-size: 1.25rem;">Revolutionize your HR operations with our cutting-edge software for employee management, performance tracking, and payroll systems.</p>
        <a href="#about" class="btn btn-outline-light btn-lg px-4 py-2" style="font-size: 1.1rem; border-radius: 50px; padding: 12px 30px; animation: fadeInUp 2s 0.5s;">
            Learn More
        </a>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5 bg-light" style="animation: fadeInUp 2s;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="display-4 mb-4" style="font-size: 2.5rem; font-weight: bold;">About Our System</h2>
                <p class="lead" style="font-size: 1.25rem;">Our Employment Management System streamlines HR tasks with intuitive features for small and large organizations alike. From tracking employee data to managing performance reviews, we’ve got you covered.</p>
                <ul class="list-unstyled">
                    <li style="font-size: 1.1rem;"><i class="bi bi-check-circle-fill"></i><strong> Employee Tracking:</strong> Effortlessly manage all employee details.</li>
                    <li style="font-size: 1.1rem;"><i class="bi bi-check-circle-fill"></i><strong> Performance Reviews:</strong> Conduct comprehensive employee evaluations.</li>
                    <li style="font-size: 1.1rem;"><i class="bi bi-check-circle-fill"></i><strong> Payroll Management:</strong> Simplify compensation and payroll processes.</li>
                    <li style="font-size: 1.1rem;"><i class="bi bi-check-circle-fill"></i><strong> Reporting:</strong> Generate in-depth reports to drive data-driven decisions.</li>
                </ul>
            </div>
            <div class="col-lg-6">
                <img src="~/benefits-of-employee-task-management-system.png" class="img-fluid rounded shadow-lg" alt="Employee Management" style="border-radius: 12px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features py-5" style="animation: fadeInUp 2s;">
    <div class="container">
        <h2 class="display-4 text-center mb-5" style="font-size: 2.5rem; font-weight: bold;">Key Features</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg hover-card" style="transition: all 0.3s ease;">
                    <img src="~/images.jpg" class="card-img-top" alt="Employee Tracking" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 1.5rem; font-weight: bold;">Employee Tracking</h5>
                        <p class="card-text" style="font-size: 1.1rem;">Efficiently manage employee information, work history, and documents with a central database.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg hover-card" style="transition: all 0.3s ease;">
                    <img src="~/download.png" class="card-img-top" alt="Performance Review" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 1.5rem; font-weight: bold;">Performance Reviews</h5>
                        <p class="card-text" style="font-size: 1.1rem;">Conduct real-time performance evaluations and track employee goals and progress.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg hover-card" style="transition: all 0.3s ease;">
                    <img src="~/how-payroll-systems-work.webp" class="card-img-top" alt="Payroll Management" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 1.5rem; font-weight: bold;">Payroll Management</h5>
                        <p class="card-text" style="font-size: 1.1rem;">Easily process payroll, manage benefits, and generate tax reports.Very Useful!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

